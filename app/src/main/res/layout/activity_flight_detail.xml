<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FlightDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/hotel_card_bg"
            android:layout_marginHorizontal="16dp"
            android:padding="16dp"
            android:elevation="10dp"
            android:layout_marginVertical="10dp"
            >
        <TextView
            android:id="@+id/fltName"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:text="Flight Name: "
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/fltdept"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:text="Departure City: "
            android:layout_height="25dp"/>

        <TextView
            android:id="@+id/fltdest"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:text="Destination City: "
            android:layout_height="25dp"/>

            <TextView
                android:id="@+id/deptTime"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:text="Departure Time: "
                android:layout_height="25dp"/>

            <TextView
                android:id="@+id/destTime"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:text="Destination Time: "
                android:layout_height="25dp"/>

            <TextView
                android:id="@+id/airport"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:text="Aitport Name: "
                android:layout_height="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/hotel_card_bg"
            android:layout_marginHorizontal="16dp"
            android:padding="16dp"
            android:layout_marginVertical="10dp"
            android:elevation="10dp"
            android:gravity="center">
            <TextView
                android:id="@+id/price"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:text="Select no. of people to book: "
                android:layout_height="25dp"/>
            <NumberPicker
                android:id="@+id/numberPickerRooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layout_marginTop="8dp"
                />
            <Spinner
                android:id="@+id/flightSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:prompt="@string/select_flight_prompt"
                android:layout_marginVertical= "8dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/bookFlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/custom_button_bg"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:text="Book Flight"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>