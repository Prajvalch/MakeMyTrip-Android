<!-- res/layout/hotel_card_item.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="8dp"

    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/hotel_card_bg"
    android:padding="16dp"

    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/hotelImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sayaji"
        app:shapeAppearanceOverlay="@style/circular" /> <!-- Set a placeholder image or use @null if loading dynamically -->

    <TextView
        android:id="@+id/hotelNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harsh Hotel"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/hotelAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Pune, Maharashtra"
        android:textSize="14dp"
        android:textColor="#E17C7C7C"/>

<!--    <TextView-->
<!--        android:id="@+id/numberOfDaysTextView"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textSize="16sp"/>-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="@color/gray" />
    <TextView
        android:id="@+id/numberOfRoomsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:text="Number of Rooms: 2"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/startingDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:text="Starting Date: 31/1/2024"
        android:textSize="14dp"/>
    <TextView
        android:id="@+id/endingDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:text="Ending Date: 1/2/2024"
        android:textSize="14dp"/>
    <Button
        android:id="@+id/cancelBookingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="end"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        android:background="@drawable/custom_button_bg"
        android:text="Cancel Booking"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        android:onClick="onCancelBookingClick"/>
</LinearLayout>
</androidx.cardview.widget.CardView>