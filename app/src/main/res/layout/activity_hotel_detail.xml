<!-- Replace this with your actual layout design for hotel details -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageViewHotel"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/calendar" />

    <TextView
        android:id="@+id/textViewHotelName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/textViewHotelAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <!-- Date Range Selector -->
    <TextView
        android:id="@+id/textViewSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Starting Date "
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/textViewSelectedDates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="8dp">
    </TextView>
    <Button
        android:id="@+id/buttonDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Dates"/>
            <TextView
                android:id="@+id/textViewSelectNumberOfDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Number of Days you need"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

            <NumberPicker
                android:id="@+id/numberPickerDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <!-- Number of Rooms Selector -->
            <TextView
                android:id="@+id/textViewSelectRooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Number of Rooms"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

            <NumberPicker
                android:id="@+id/numberPickerRooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

    <!-- Book Hotel Button -->
    <Button
        android:id="@+id/buttonBookHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book Hotel"
        android:layout_marginTop="16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
