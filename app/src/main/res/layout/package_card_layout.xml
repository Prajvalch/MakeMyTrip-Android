<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="8dp"

    >

    <!-- Your content goes here -->

    <LinearLayout
        android:id="@+id/hotelCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hotel_card_bg"
        android:orientation="vertical">

        <!-- Provide a placeholder image -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewHotel"
                android:layout_width="match_parent"
                android:layout_height="202dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sayaji" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">



            <TextView
                android:id="@+id/textViewHotelName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luxury Hotel Deals - Goa Special"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4N/5D"
                android:background="@drawable/packagedurationbg"
                android:padding="4dp"
                android:textColor="@color/rating_bg"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="8dp"
                android:background="@color/gray" />
            <TextView
                android:id="@+id/textViewHotelAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/subtext"
                android:text="1) Round Trip Flights \n 2) 5 Star Hotel \n 3) Airport Transfers \n 4) Airport Pickup and Drop \n 5) 1 Activity \n 6) Selected Meal"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:background="@drawable/holiday_price_bg"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"

                    android:layout_gravity="start"
                    android:text="Exclusive Offer"
                    android:textColor="@color/subtext"
                    android:textSize="16dp"

                    />

                <TextView
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="â‚¹ 47,763 / Person"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>