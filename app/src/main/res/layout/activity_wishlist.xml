<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bg"

    android:gravity="center"
android:orientation="vertical"
    android:padding="16dp">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="notsaved.json"
        app:lottie_loop="false"
        android:visibility="gone"

        />
    <TextView
        android:id="@+id/nothing_saved_yet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing Saved Yet"
        android:textSize="25dp"

        android:textColor="@color/rating_bg"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/description_wishlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="While exploring, tap the heart icon to save your favourite hotels here."
        android:textSize="16dp"
        android:layout_marginHorizontal="15dp"

        android:textColor="@color/subtext"
        android:gravity="center_horizontal"
        android:visibility="gone"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewWishlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
